{
  "name": "codex-claude-bridge",
  "version": "0.1.2",
  "description": "Automated code review powered by OpenAI Codex. CLI + Claude Code MCP integration.",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "codex-claude-bridge": "./dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/",
    "format": "prettier --write 'src/**/*.ts'",
    "prepublishOnly": "npm run build && npm run typecheck && npm run lint && npm test"
  },
  "keywords": [
    "mcp",
    "claude",
    "codex",
    "code-review",
    "openai",
    "anthropic",
    "cli",
    "precommit",
    "ai-code-review",
    "developer-tools"
  ],
  "author": "Amir Shayegh",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AmirShayegh/codex-claude-bridge.git"
  },
  "homepage": "https://github.com/AmirShayegh/codex-claude-bridge#readme",
  "bugs": {
    "url": "https://github.com/AmirShayegh/codex-claude-bridge/issues"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.26.0",
    "@openai/codex-sdk": "^0.104.0",
    "better-sqlite3": "^12.6.2",
    "commander": "^13.1.0",
    "picocolors": "^1.1.1",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^25.3.0",
    "eslint": "^10.0.0",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.8.1",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.56.0",
    "vitest": "^4.0.18"
  }
}
